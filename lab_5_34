#include <stdio.h>

int main() {
    int n;
    double x, sum = 0.0, factorial = 1.0;

    // Вводим значения x и n
    printf("Введите натуральное число n: ");
    scanf("%d", &n);
    printf("Введите действительное число x: ");
    scanf("%lf", &x);

    // Проверка на корректность ввода
    if (n <= 0) {
        printf("n должно быть натуральным числом (больше нуля).\n");
        return 1;
    }

    int i = 1; // Начинаем с 1, так как 0! не используется в сумме
    while (i <= n) {
        factorial *= i; // Вычисляем i!
        sum += x / factorial; // Добавляем x / i! к сумме
        i++; // Переходим к следующему i
    }

    // Выводим результат
    printf("Сумма S = %.6f\n", sum);
    
    return 0;
}
