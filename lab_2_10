#include <iostream>

int main() {
    double a, b, c;

    // Ввод сторон треугольника
    std::cout << "Введите стороны треугольника (a, b, c): ";
    std::cin >> a >> b >> c;

    // Проверка на равносторонний треугольник
    if (a == b && b == c) {
        std::cout << "Треугольник равносторонний." << std::endl;
    }
    // Проверка на равнобедренный треугольник
    else if (a == b || b == c || a == c) {
        std::cout << "Треугольник равнобедренный." << std::endl;
    } else {
        std::cout << "Треугольник ни равносторонний, ни равнобедренный." << std::endl;
    }

    return 0;
}
